@model StageStory.Models.Internship;
@using StageStory.Models.Enum;

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Story Stage - Évaluation de stages</title>
    <!-- Bootstrap 5 CSS -->
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"> *@
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/index.css" />
</head>
<body>
    <!-- Navigation moderne -->
   

    <!-- Hero section améliorée -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="promo-badge">
                        <i class="bi bi-patch-check-fill"></i>
                        <span>Bénéficiez de 30% de réduction sur votre premier stage</span>
                    </div>

                    <h1 class="hero-title">Faites progresser vos compétences en ingénierie avec nous</h1>

                    <p class="hero-subtitle">Développez vos compétences avec nos cours et bénéficiez de mentors d'entreprises de classe mondiale.</p>

                    <div class="search-container">
                        <input type="text" class="form-control search-input" placeholder="Rechercher des cours...">
                        <button class="search-btn">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>

                    <div class="features-grid">
                        <div class="feature-item">
                            <i class="bi bi-clock feature-icon"></i>
                            <h5>Flexible</h5>
                            <p class="small mb-0">Apprenez à votre rythme</p>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-graph-up feature-icon"></i>
                            <h5>Parcours</h5>
                            <p class="small mb-0">Parcours d'apprentissage personnalisé</p>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-people feature-icon"></i>
                            <h5>Communauté</h5>
                            <p class="small mb-0">Rejoignez notre communauté</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 text-center">
                    <img src="~/images/mahila.png" alt="Étudiante" class="hero-image">
                </div>
            </div>
        </div>
    </section>

    <!-- Contenu principal -->
    <section class="main-content">
        <div class="container">
            <div class="row">
                <!-- Formulaire d'ajout de stage -->
                <div class="col-lg-6 mb-5">
                    <h2 class="section-title">Ajouter un nouveau stage</h2>
                    <div class="card card-modern">
                        <div class="card-header-modern">
                            <h3><i class="bi bi-plus-circle"></i>Nouveau stage</h3>
                        </div>
                        <div class="card-body p-4">
                            <form id="internshipForm" method="post" asp-controller="Internships" asp-action="Create">

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Nom du stage</label>
                                    <input asp-for="Name" type="text" class="form-control" placeholder="Ex: Développeur web front-end">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Description</label>
                                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Évaluation</label>
                                    <div class="d-flex justify-content-between mb-2" id="emojiRating">
                                        <span class="emoji-rating" data-rating="1">😞</span>
                                        <span class="emoji-rating" data-rating="2">😐</span>
                                        <span class="emoji-rating" data-rating="3">😊</span>
                                        <span class="emoji-rating" data-rating="4">😄</span>
                                        <span class="emoji-rating" data-rating="5">🤩</span>
                                    </div>

                                    <!-- Doit avoir asp-for="Rating" -->
                                    <input asp-for="Rating" type="hidden" id="rating" value="0">

                                    <div class="text-center text-muted small" id="ratingText">
                                        Sélectionnez une note
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Commentaire d'évaluation</label>
                                    <textarea asp-for="Evaluation" class="form-control" rows="3"></textarea>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Salaire (€)</label>
                                    <input asp-for="SalaryAmount" type="number" class="form-control" placeholder="Montant mensuel">
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Date de début</label>
                                        <input asp-for="StartDate" type="date" class="form-control">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Date de fin</label>
                                        <input asp-for="EndDate" type="date" class="form-control">
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Entreprise</label>
                                    <select asp-for="EntrepriseId" class="form-select" asp-items="ViewBag.EntrepriseList">
                                        <option>--Selectionnez une entreprise--</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Type de convention</label>
                                    <select asp-for="SignatureType" class="form-select"
                                            asp-items="Html.GetEnumSelectList<ConventionTypeEnum>()">
                                                <option>-- Selectionnez un type de convention --</option>
                                    </select>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary-modern btn-lg">
                                        <i class="bi bi-check-circle me-2"></i>Enregistrer le stage
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>

                <!-- Statistiques et liste des stages -->
                <div class="col-lg-6">
                    <h2 class="section-title">Mes stages</h2>

                    <!-- Statistiques rapides -->
                    <div class="row mb-4">
                        <div class="col-md-4 mb-3">
                            <div class="stats-card stats-1">
                                <div class="stats-number">5</div>
                                <p class="mb-0">Stages évalués</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="stats-card stats-2">
                                <div class="stats-number">3</div>
                                <p class="mb-0">Validés</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="stats-card stats-3">
                                <div class="stats-number">2</div>
                                <p class="mb-0">En attente</p>
                            </div>
                        </div>
                    </div>

                    <!-- Liste des stages -->
                    <div class="card card-modern mb-4">
                        <div class="card-header-modern">
                            <h3><i class="bi bi-list-check"></i>Mes stages récents</h3>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                <!-- Stage 1 -->
                                <div class="list-group-item stage-item">
                                    <div class="stage-header">
                                        <div>
                                            <h5 class="stage-title">Développeur Full Stack</h5>
                                            <p class="stage-company mb-1">TechCorp - Du 01/03/2023 au 30/08/2023</p>
                                        </div>
                                        <span class="badge bg-success">Validé</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="stage-rating">
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star-half"></i>
                                            </span>
                                            <span class="ms-2">4.5/5</span>
                                        </div>
                                        <button class="btn btn-sm btn-outline-primary">Voir détails</button>
                                    </div>
                                </div>

                                <!-- Stage 2 -->
                                <div class="list-group-item stage-item">
                                    <div class="stage-header">
                                        <div>
                                            <h5 class="stage-title">Assistant Marketing Digital</h5>
                                            <p class="stage-company mb-1">MarketPlus - Du 15/05/2023 au 15/11/2023</p>
                                        </div>
                                        <span class="badge bg-warning text-dark">En attente</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="stage-rating">
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star"></i>
                                            </span>
                                            <span class="ms-2">4/5</span>
                                        </div>
                                        <button class="btn btn-sm btn-outline-primary">Voir détails</button>
                                    </div>
                                </div>

                                <!-- Stage 3 -->
                                <div class="list-group-item stage-item">
                                    <div class="stage-header">
                                        <div>
                                            <h5 class="stage-title">Analyste données</h5>
                                            <p class="stage-company mb-1">DataSolutions - Du 10/01/2023 au 10/04/2023</p>
                                        </div>
                                        <span class="badge bg-success">Validé</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="stage-rating">
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star"></i>
                                                <i class="bi bi-star"></i>
                                            </span>
                                            <span class="ms-2">3/5</span>
                                        </div>
                                        <button class="btn btn-sm btn-outline-primary">Voir détails</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-center py-3">
                            <a href="#" class="btn btn-outline-primary">Voir tous mes stages</a>
                        </div>
                    </div>

                    <!-- Graphique simple -->
                    <div class="card card-modern">
                        <div class="card-header-modern">
                            <h3><i class="bi bi-graph-up"></i>Répartition de mes stages</h3>
                        </div>
                        <div class="card-body">
                            <div class="chart-container">
                                <div class="d-flex flex-column align-items-center">
                                    <div class="chart-bar bg-primary mb-1" style="height: 100px;"></div>
                                    <small>Validés</small>
                                    <div class="fw-bold">3</div>
                                </div>
                                <div class="d-flex flex-column align-items-center">
                                    <div class="chart-bar bg-warning mb-1" style="height: 70px;"></div>
                                    <small>En attente</small>
                                    <div class="fw-bold">2</div>
                                </div>
                                <div class="d-flex flex-column align-items-center">
                                    <div class="chart-bar bg-danger mb-1" style="height: 30px;"></div>
                                    <small>Refusés</small>
                                    <div class="fw-bold">0</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5>
                        <i class="bi bi-journal-bookmark-fill"></i>
                        Story Stage
                    </h5>
                    <p class="text-light">La plateforme d'évaluation de stages pour partager vos expériences et aider la communauté étudiante.</p>
                    <p>Made by Louyama Tech</p>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6>Navigation</h6>
                    <div class="footer-links">
                        <a href="#">Accueil</a>
                        <a href="#">Mes Stages</a>
                        <a href="#">Statistiques</a>
                        <a href="#">Mon Profil</a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6>Légal</h6>
                    <div class="footer-links">
                        <a href="#">Mentions légales</a>
                        <a href="#">Confidentialité</a>
                        <a href="#">CGU</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <h6>Contact</h6>
                    <div class="footer-links">
                        <a href="#"><i class="bi bi-envelope me-2"></i>contact@storystage.fr</a>
                        <a href="#"><i class="bi bi-telephone me-2"></i>+771233252</a>
                        <a href="#"><i class="bi bi-geo-alt me-2"></i>Dakar, Senegal</a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom text-center">
                <p class="mb-0">&copy; 2023 Story Stage. Tous droits réservés.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script> *@

    <script>
        // Gestion de la sélection des émojis pour l'évaluation
        document.querySelectorAll('.emoji-rating').forEach(emoji => {
            emoji.addEventListener('click', function() {
                // Retirer la classe selected de tous les émojis
                document.querySelectorAll('.emoji-rating').forEach(e => {
                    e.classList.remove('selected');
                });
                this.classList.add('selected');

                const rating = this.getAttribute('data-rating');
                document.getElementById('rating').value = rating;

                // Mettre à jour le texte descriptif
                const ratingText = document.getElementById('ratingText');
                const texts = {
                    1: "Très déçu",
                    2: "Déçu",
                    3: "Satisfait",
                    4: "Très satisfait",
                    5: "Excellente expérience"
                };
                ratingText.textContent = texts[rating];
            });
        });

    </script>
</body>
</html>