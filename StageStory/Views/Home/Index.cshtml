    <!-- Contenu principal -->
    <section class="main-content">
        <div class="container">
            <div class="row">
                <!-- Formulaire d'ajout de stage -->
                <div class="col-lg-6 mb-5">
                    <h2 class="section-title">Ajouter un nouveau stage</h2>
                    <div class="card card-modern">
                        <div class="card-header-modern">
                            <h3><i class="bi bi-plus-circle"></i>Nouveau stage</h3>
                        </div>
                        <div class="card-body p-4">
                            <form id="internshipForm">
                                <div class="mb-3">
                                    <label for="name" class="form-label fw-bold">Nom du stage</label>
                                    <input type="text" class="form-control" id="name" placeholder="Ex: Développeur web front-end">
                                </div>

                                <div class="mb-3">
                                    <label for="description" class="form-label fw-bold">Description</label>
