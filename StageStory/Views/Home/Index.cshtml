@model IEnumerable<StageStory.Models.Internship>;
@{
    ViewData["Title"] = "Accueil";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Story Stage - Évaluation de stages</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .emoji-rating {
            font-size: 2rem;
            cursor: pointer;
            transition: transform 0.2s;
        }

            .emoji-rating:hover {
                transform: scale(1.2);
            }

            .emoji-rating.selected {
                transform: scale(1.3);
            }

        .stage-card {
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .stage-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
            }

        .status-badge {
            font-size: 0.8rem;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">
                <i class="bi bi-journal-bookmark-fill me-2"></i>
                Story Stage
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Mes Stages</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Statistiques</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Mon Profil</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <span class="navbar-text me-3">Bonjour, Étudiant!</span>
                    <a href="#" class="btn btn-outline-light">Déconnexion</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="bg-primary text-white py-4">
        <div class="container py-4">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-5 fw-bold mb-3">Évaluez vos expériences de stage</h1>
                    <p class="lead mb-4">Partagez votre expérience de stage et aidez les futurs étudiants à faire les bons choix.</p>
                </div>
                <div class="col-lg-4 text-center">
                    <img src="https://via.placeholder.com/300x200/0d6efd/ffffff?text=Story+Stage" alt="Story Stage" class="img-fluid rounded shadow">
                </div>
            </div>
        </div>
    </section>

    <!-- Contenu Principal -->
    <div class="container my-5">
        <div class="row">
            <!-- Formulaire d'ajout de stage -->
            <div class="col-lg-6 mb-5">
                <div class="card border-0 shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="card-title mb-0"><i class="bi bi-plus-circle me-2"></i>Ajouter un nouveau stage</h3>
                    </div>
                    <div class="card-body p-4">
                        <form id="internshipForm">
                            <div class="mb-3">
                                <label for="name" class="form-label fw-bold">Nom du stage</label>
                                <input type="text" class="form-control" id="name" placeholder="Ex: Développeur web front-end">
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label fw-bold">Description</label>
                                <textarea class="form-control" id="description" rows="3" placeholder="Décrivez vos missions principales..."></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Évaluation</label>
                                <div class="d-flex justify-content-between mb-2" id="emojiRating">
                                    <span class="emoji-rating" data-rating="1">😞</span>
                                    <span class="emoji-rating" data-rating="2">😐</span>
                                    <span class="emoji-rating" data-rating="3">😊</span>
                                    <span class="emoji-rating" data-rating="4">😄</span>
                                    <span class="emoji-rating" data-rating="5">🤩</span>
                                </div>
                                <input type="hidden" id="rating" name="rating" value="0">
                                <div class="text-center text-muted small" id="ratingText">Sélectionnez une note</div>
                            </div>

                            <div class="mb-3">
                                <label for="evaluation" class="form-label fw-bold">Commentaire d'évaluation</label>
                                <textarea class="form-control" id="evaluation" rows="3" placeholder="Partagez votre expérience globale..."></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="salaryAmount" class="form-label fw-bold">Salaire (€)</label>
                                <input type="number" class="form-control" id="salaryAmount" placeholder="Montant mensuel">
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="startDate" class="form-label fw-bold">Date de début</label>
                                    <input type="date" class="form-control" id="startDate">
                                </div>
                                <div class="col-md-6">
                                    <label for="endDate" class="form-label fw-bold">Date de fin</label>
                                    <input type="date" class="form-control" id="endDate">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="entreprise" class="form-label fw-bold">Entreprise</label>
                                <input type="text" class="form-control" id="entreprise" placeholder="Nom de l'entreprise">
                            </div>

                            <div class="mb-3">
                                <label for="signatureType" class="form-label fw-bold">Type de convention</label>
                                <select class="form-select" id="signatureType">
                                    <option value="1">Convention d'école</option>
                                    <option value="2">Contrat de stage</option>
                                    <option value="3">Autre</option>
                                </select>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-check-circle me-2"></i>Enregistrer le stage
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Liste des stages et statistiques -->
            <div class="col-lg-6">
                <!-- Statistiques rapides -->
                <div class="row mb-4">
                    <div class="col-md-4 mb-3">
                        <div class="card bg-primary text-white text-center">
                            <div class="card-body py-3">
                                <h4 class="fw-bold">5</h4>
                                <p class="mb-0 small">Stages évalués</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card bg-success text-white text-center">
                            <div class="card-body py-3">
                                <h4 class="fw-bold">3</h4>
                                <p class="mb-0 small">Validés</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card bg-warning text-white text-center">
                            <div class="card-body py-3">
                                <h4 class="fw-bold">2</h4>
                                <p class="mb-0 small">En attente</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Liste des stages -->
                <div class="card border-0 shadow">
                    <div class="card-header bg-light">
                        <h3 class="card-title mb-0"><i class="bi bi-list-check me-2"></i>Mes stages récents</h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <!-- Stage 1 -->
                            <div class="list-group-item p-3 stage-card">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="fw-bold mb-0">Développeur Full Stack</h5>
                                    <span class="badge bg-success status-badge">Validé</span>
                                </div>
                                <p class="text-muted mb-2">TechCorp - Du 01/03/2023 au 30/08/2023</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="text-warning">
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-half"></i>
                                        </span>
                                        <span class="ms-2">4.5/5</span>
                                    </div>
                                    <button class="btn btn-sm btn-outline-primary">Voir détails</button>
                                </div>
                            </div>

                            <!-- Stage 2 -->
                            <div class="list-group-item p-3 stage-card">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="fw-bold mb-0">Assistant Marketing Digital</h5>
                                    <span class="badge bg-warning text-dark status-badge">En attente</span>
                                </div>
                                <p class="text-muted mb-2">MarketPlus - Du 15/05/2023 au 15/11/2023</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="text-warning">
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star"></i>
                                        </span>
                                        <span class="ms-2">4/5</span>
                                    </div>
                                    <button class="btn btn-sm btn-outline-primary">Voir détails</button>
                                </div>
                            </div>

                            <!-- Stage 3 -->
                            <div class="list-group-item p-3 stage-card">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="fw-bold mb-0">Analyste données</h5>
                                    <span class="badge bg-success status-badge">Validé</span>
                                </div>
                                <p class="text-muted mb-2">DataSolutions - Du 10/01/2023 au 10/04/2023</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="text-warning">
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star-fill"></i>
                                            <i class="bi bi-star"></i>
                                            <i class="bi bi-star"></i>
                                        </span>
                                        <span class="ms-2">3/5</span>
                                    </div>
                                    <button class="btn btn-sm btn-outline-primary">Voir détails</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-light text-center">
                        <a href="#" class="btn btn-outline-primary">Voir tous mes stages</a>
                    </div>
                </div>

                <!-- Graphique simple -->
                <div class="card border-0 shadow mt-4">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0"><i class="bi bi-graph-up me-2"></i>Répartition de mes stages</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-end justify-content-between text-center" style="height: 150px;">
                            <div class="d-flex flex-column align-items-center">
                                <div class="bg-primary rounded-top mb-1" style="width: 40px; height: 100px;"></div>
                                <small>Validés</small>
                                <div class="fw-bold">3</div>
                            </div>
                            <div class="d-flex flex-column align-items-center">
                                <div class="bg-warning rounded-top mb-1" style="width: 40px; height: 70px;"></div>
                                <small>En attente</small>
                                <div class="fw-bold">2</div>
                            </div>
                            <div class="d-flex flex-column align-items-center">
                                <div class="bg-danger rounded-top mb-1" style="width: 40px; height: 30px;"></div>
                                <small>Refusés</small>
                                <div class="fw-bold">0</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-journal-bookmark-fill me-2"></i>
                        Story Stage
                    </h5>
                    <p class="text-muted">La plateforme d'évaluation de stages pour partager vos expériences et aider la communauté étudiante.</p>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Navigation</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Accueil</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Mes Stages</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Statistiques</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Mon Profil</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Légal</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Mentions légales</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Confidentialité</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">CGU</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-3 bg-secondary">
            <div class="text-center">
                <p class="text-muted mb-0">&copy; 2023 Story Stage. Tous droits réservés.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Gestion de la sélection des émojis pour l'évaluation
        document.querySelectorAll('.emoji-rating').forEach(emoji => {
            emoji.addEventListener('click', function() {
                // Retirer la classe selected de tous les émojis
                document.querySelectorAll('.emoji-rating').forEach(e => {
                    e.classList.remove('selected');
                });

                // Ajouter la classe selected à l'émoji cliqué
                this.classList.add('selected');

                // Mettre à jour la valeur du champ caché
                const rating = this.getAttribute('data-rating');
                document.getElementById('rating').value = rating;

                // Mettre à jour le texte descriptif
                const ratingText = document.getElementById('ratingText');
                const texts = {
                    1: "Très déçu",
                    2: "Déçu",
                    3: "Satisfait",
                    4: "Très satisfait",
                    5: "Excellente expérience"
                };
                ratingText.textContent = texts[rating];
            });
        });

        // Gestion de la soumission du formulaire
        document.getElementById('internshipForm').addEventListener('submit', function(e) {
            e.preventDefault();

            // Ici, vous ajouteriez le code pour envoyer les données au serveur
            // Pour l'instant, on simule juste un enregistrement réussi
            alert('Stage enregistré avec succès!');
            this.reset();

            // Réinitialiser les émojis
            document.querySelectorAll('.emoji-rating').forEach(e => {
                e.classList.remove('selected');
            });
            document.getElementById('ratingText').textContent = 'Sélectionnez une note';
        });
    </script>
</body>
</html>